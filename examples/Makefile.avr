#DEBUG     = -g

CC        = avr-gcc
CCFLAGS   = -mmcu=atmega8 -Wall $(DEBUG) -std=gnu99 -Os -ffunction-sections
LDFLAGS   = -Wl,--gc-sections
TARGET    = microrl_test.hex

all: microrl_test


microrl_test: example.o ../src/microrl.o avr_misc/avr_misc.o
	$(CC) $^ -o $@ $(LDFLAGS)
	avr-objcopy -j .text -O ihex microrl_test $(TARGET)
	avr-size $(TARGET)


%.o: %.c
	$(CC) -c $< $(CCFLAGS) -o $(*).o

clean:
	rm -f avr_misc/*.o ../src/microrl.o *.o $(TARGET)

load:
	avreal +ATmega8 -aft2232 -evw -c $(TARGET)
